<?xml version="1.0" encoding="UTF-8" ?>
<!--默认配置文件-->
<jstart>

	<import path="ApplicationConfig"/>
	
	<!-- 常量 -->
	<!--需扫描的包-->
	<constant name="CLASSSCANPATH" value=""/>
	<!--开发模式-->
	<constant name="DEVMODE" value="true"/>
	<!--全局编码模式-->
	<constant name="ENCODING" value="UTF-8"/>
	<!-- 默认日期时间格式 -->
	<constant name="DATAFORMAT" value="yyyyMMddHHmmss"/>
	<!-- 数据保存主路径 -->
	<constant name="ROOTPATH" value="/Root/Data/"/>
	<!--文件临时存放的目录-->
	<constant name="TMPPATH" value="/Root/Temp/"/>
	<!--文件上传文件大小默认1G-->
	<constant name="MAXUPLOADSIZE" value="1073741824"/>
	<!--允许上传的类型-->
	<constant name="ALLOWUPLOADTYPES">*</constant>
	
	<!-- 以下拦截器对象，可自执行选择加载使用 -->
	<!-- <bean class="start.application.web.support.interceptor.ParametersInterceptor"/> -->
	<!-- <bean class="start.application.web.support.interceptor.fileupload.UploadFileInterceptor"/> -->
	
</jstart>